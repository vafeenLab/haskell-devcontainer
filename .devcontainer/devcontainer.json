{
  "name": "Haskell",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": ["--name", "${localWorkspaceFolderBasename}"],
  "customizations": {
    "vscode": {
      "extensions": [
        "haskell.haskell",
        "midhunan.haskellrun",
        "justusadam.language-haskell"
      ]
    }
  },
  "workspaceFolder": "/${localWorkspaceFolderBasename}",
  "remoteUser": "root",
  "mounts": ["source=${localWorkspaceFolder},target=/${localWorkspaceFolderBasename},type=bind"]
}
